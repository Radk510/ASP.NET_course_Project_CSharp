@model TestSportProgect.Models.Club

@{
    ViewBag.Title = "ClubInfo";
}

<div class="container">
    <h1 class="mt-5">@Model.Name</h1>
    <div class="row mt-5">
        <div class="col-md-6">
            <img src="~/Content/img/ClubsLogos/@Model.GetClubLogoPath"
                    alt="@Model.Name" class="img-thumbnail mb-5" />
        </div>
        <div class="col-md-6">
            <h3><label>Club stadium:</label> @Model.Stadium</h3>
            <img src="~/Content/img/ClubsStadiums/@Model.GetStadiumPhotoPath" class="img-fluid" />            
            @Html.ActionLink("Return to clubs list", "FootballClubs", null, new { @class = "btn btn-success my-5"})
        </div>
        
        
    </div>
</div>


