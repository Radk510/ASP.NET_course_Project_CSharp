<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sports news & events</title>
    <link href='@Url.Content("~/Content/css/bootstrap.min.css")' rel="stylesheet" />
    <link href='@Url.Content("~/Content/css/main.css")' rel="stylesheet" />
    <script src="https://kit.fontawesome.com/9993bb88f2.js"></script>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-lg-3">
                    <a href='@Url.Content("~/Home/index")'><img src='@Url.Content("~/Content/img/page-logo.png")' alt="Page logo" class="logo"></a>
                </div>
                <div class="col-lg-8 ml-auto">
                    <nav>
                        <ul class="menu d-flex justify-content-center">
                            <li>
                                @Html.ActionLink("Main", "Index")
                            </li>
                            <li>
                                <a href='@Url.Content("~/Home/index#transfer-section")'>News & Events</a>
                            </li>
                            <li>                               
                                @Html.ActionLink("Clubs & Leagues", "FootballClubs")
                            </li>
                            <li>
                                <a href="#footer">Contacts</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
        @RenderBody()        
        <footer class="footer" id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 d-flex align-items-end">
                        <p>Created by Rodion Kl. &copy2019</p>
                    </div>
                    <div class="col-lg-3 ml-auto">
                        <p>mob.: +375 29 1994789</p>
                        <p>skype: Rodionk510</p>
                        <p>e-mail: rodionk510@yandex.ru</p>
                    </div>
                </div>
            </div>
        </footer>
    <script src='@Url.Content("~/Scripts/js/main.js")'></script> 
    @Scripts.Render("~/bundles/jquery")
    <script src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>
</body>
</html>
